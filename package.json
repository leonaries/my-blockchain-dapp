    "@cosmjs/crypto": "^0.32.2",
    "@cosmjs/utils": "^0.32.2",
    "@keplr-wallet/types": "^0.12.15",
    "axios": "^1.6.0",
    "@tanstack/react-query": "^4.36.1",
    "zustand": "^4.4.6",
    "react-hot-toast": "^2.4.1",
